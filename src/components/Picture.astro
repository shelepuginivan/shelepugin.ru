---
import { Image } from 'astro:assets'

const { src, alt, outline = false } = Astro.props

const imageClass = `max-w-4xl rounded-lg ${outline ? 'outline' : ''}`
---

<figure class="flex flex-col items-center">
    <Image class={imageClass} src={src} alt={alt} />
    <figcaption class="text-center">
        <slot />
    </figcaption>
</figure>
