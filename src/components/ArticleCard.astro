---
import { getCollection, render } from 'astro:content';
import { Icon } from 'astro-icon/components'

const {
    title,
    summary,
    id,
    date,
    archive = false,
} = Astro.props
---

<a
    class="card not-prose flex items-center justify-between text-neutral-300 border border-stone-700 rounded-lg p-6 hover:border-stone-200 hover:text-stone-50 mt-4"
    href={`/${archive ? 'archive' : 'blog'}/${id}`}
>
    <div class="flex flex-col gap-4">
        <h3 class="text-3xl">{title}</h3>
        <p>{summary}</p>
        <p class="text-stone-400">Читать далее...</p>
    </div>
    <div class="icon-wrap flex justify-end min-w-8">
        <Icon name="carbon:chevron-right" size="24px" />
    </div>
</a>

<style>
    .icon-wrap {
        transition: transform .2s ease;
    }

    .card:hover .icon-wrap {
        transform: translateX(4px);
    }
</style>
